<% provide(:title, 'Home') %>

<!DOCTYPE html>
<html>
<div class="center hero-unit" height: "30">
<h1>Welcome to Hotel Rilana</h1>
<title>Hotel Rilana | <%= yield(:title) %></title>

<%= link_to "Sign up", signup_path, class: "btn btn-large btn-primary" %>
</div>

<div id="myCarousel" class="carousel slide">
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><img alt="beach" src="/assets/beach.JPG" /></div>
    <div class="item"><img alt="croc" src="/assets/croc.JPG" /></div>
    <div class="item"><img alt="mountain" src="/assets/mountain.JPG" /></div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
